# =============================================================
# LexEdge – Open Legal Agents · Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================

# ── API KEYS ─────────────────────────────────────────────────
# Required: Google Gemini / Vertex AI key
GOOGLE_API_KEY=your_google_api_key_here

# Optional: OpenAI-compatible endpoints (OpenRouter, vLLM, etc.)
OPENAI_API_KEY=
OPENROUTER_API_KEY=

# ── MODEL CONFIGURATION ──────────────────────────────────────
# Gemini model to use (default: gemini-1.5-pro)
LLM_MODEL=gemini-1.5-pro
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=8192

# Optional: Self-hosted LLM via vLLM or LiteLLM
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_API_KEY=

# ── BACKEND CONFIGURATION ────────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=3334
# Frontend origin for CORS (Vite default)
FRONTEND_ORIGIN=http://localhost:5173

# ── SESSION & REDIS ──────────────────────────────────────────
# Set to true to use Redis for session storage (recommended for production)
USE_REDIS_SESSIONS=false
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=5
SESSION_TTL_HOURS=24
ENABLE_SESSION_FALLBACK=true

# ── WEBSOCKET LIMITS ─────────────────────────────────────────
MAX_WEBSOCKET_CONNECTIONS=50
MAX_CONNECTIONS_PER_USER=3
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_CONNECTION_TIMEOUT=300

# ── AUDIO TRANSCRIPTION ──────────────────────────────────────
# Optional: Custom ASR endpoint (leave empty to use Gemini built-in)
ASR_URL=

# ── JURISDICTION DEFAULTS ────────────────────────────────────
DEFAULT_JURISDICTION=India
# Prefer new Indian codes (BNS/BNSS/BSA) over IPC/CrPC/IEA
PREFER_NEW_CODES=true
